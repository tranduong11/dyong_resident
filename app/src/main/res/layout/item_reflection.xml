<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/edittext_custom"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên phòng: "
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/txt_tenPhong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="201"
            />
    </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vị trí số tầng: "
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/txt_viTriSoTang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="201"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người gửi: "
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/txt_nguoiTao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="201"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung phản ánh: "
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="4dp" />
        <TextView
            android:id="@+id/txt_noiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="201"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="31-10-2024 15:56"
        android:textSize="12sp"
        android:textColor="#9E9E9E"
        android:gravity="right"
        android:paddingTop="4dp" />
</LinearLayout>
